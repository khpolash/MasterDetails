<!-- Medicine Add Modal Start -->
<div class="modal fade" id="medicineAdd">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add New Medicine</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="">
                    <div class="mb-2">
                        <label for="mName" class="col-form-label">Medicine Name</label>
                        <input type="text" class="form-control" id="mName">
                    </div>
                    <div class="mb-2">
                        <label for="gName" class="col-form-label">Generic Name</label>
                        <input type="text" class="form-control" id="gName">
                    </div>
                    <div class="mb-2">
                        <label for="cName" class="col-form-label">Generic Name</label>
                        <input type="text" class="form-control" id="cName">
                    </div>
                    <div class="mb-2">
                        <label for="mDate" class="col-form-label">Manufacture Date</label>
                        <input type="date" class="form-control" id="mDate">
                    </div>
                    <div class="mb-2">
                        <label for="exDate" class="col-form-label">Expire Date</label>
                        <input type="date" class="form-control" id="exDate">
                    </div>
                    <div class="mb-2">
                        <label for="cId" class="col-form-label">Category Id</label>
                        <input type="number" class="form-control" id="cId">
                    </div>
                </form>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<!-- Medicine Add Modal End -->