<!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Purchase Form</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Purchase Form</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->

    <!-- Purchase Form Start -->
    <div class="purchase-form">
      <div class="col-md-12">
        <div class="row">
          <div class="mb-3">
            <a href="#">
              <i class="bi bi-arrow-left"></i>
              New Purchase
            </a>
          </div>
          <form action="">
            <div class="row">
              <div class="col-md-7">
                <div class="mb-3 row">
                  <label for="purchaseNo" class="col-sm-3 col-form-label">Purchase No</label>
                  <div class="col-sm-8">
                    <input type="text" class="form-control" id="purchaseNo">
                  </div>
                </div>
                <div class="mb-3 row">
                  <label for="purchaseDate" class="col-sm-3 col-form-label">Purchase Date</label>
                  <div class="col-sm-8">
                    <input type="text" class="form-control" id="purchaseDate">
                  </div>
                </div>
                <div class="mb-3 row">
                  <label for="supplier" class="col-sm-3 col-form-label">Supplier</label>
                  <div class="col-sm-8">
                    <input type="text" class="form-control" id="supplier">
                  </div>
                </div>
                <div class="mb-3 row">
                  <label for="notes" class="col-sm-3 col-form-label">Notes</label>
                  <div class="col-sm-8">
                    <textarea name="note" class="form-control" id="notes" cols="30" rows="3"></textarea>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <div class="mb-3">
                  <label for="category" class="form-label">Category</label>
                  <input type="text" class="form-control" id="category">
                </div>
              </div>
              <div class="col">
                <div class="mb-3">
                  <label for="medicine" class="form-label">Medicine</label>
                  <input type="text" class="form-control" id="medicine">
                </div>
              </div>
              <div class="col">
                <div class="mb-3">
                  <label for="unit" class="form-label">Unit</label>
                  <input type="text" class="form-control" id="unit">
                </div>
              </div>
              <div class="col">
                <div class="mb-3">
                  <label for="batchNo" class="form-label">Batch No</label>
                  <input type="text" class="form-control" id="batchNo">
                </div>
              </div>
              <div class="col">
                <div class="mb-3">
                  <label for="quantity" class="form-label">Quantity</label>
                  <input type="text" class="form-control" id="quantity">
                </div>
              </div>
              <div class="col">
                <div class="mb-3">
                  <label for="amount" class="form-label">Amount</label>
                  <input type="text" class="form-control" id="amount">
                </div>
              </div>
              <div class="col">
                <div class="mb-3">
                  <label for="discount" class="form-label">Discount</label>
                  <input type="text" class="form-control" id="discount">
                </div>
              </div>
              <div class="col">
                <div class="mb-3">
                  <label for="total" class="form-label">Total</label>
                  <input type="text" class="form-control" id="total">
                </div>
              </div>
              <div class="col">
                <div class="mb-3">
                  <button type="submit" class="btn btn-primary" id="add">
                    <i class="bi bi-plus-lg"></i>
                  </button>
                </div>
              </div>
              <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th scope="col">Category</th>
                    <th scope="col">Medicine</th>
                    <th scope="col">Unit</th>
                    <th scope="col">Batch No</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Discount</th>
                    <th scope="col">Total</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>Tab</td>
                    <td>Napa+</td>
                    <td>Pcs</td>
                    <td>BP001</td>
                    <td>10</td>
                    <td>50</td>
                    <td>5</td>
                    <td>475</td>
                    <td>
                      <div class="text-center actionBtn">
                        <button id="edit"><i class="bi bi-pencil-fill" title="Edit"></i>
                        </button>
                        <button id="delete"><i class="bi bi-trash-fill"  title="Delete"></i>
                        </button>
                      </div>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div class="row mt-3">
              <div class="col-md-5">
                <div class="mb-3 row">
                  <label for="paymentType" class="col-sm-3 col-form-label">Payment Type</label>
                  <div class="col-sm-8">
                    <input type="text" class="form-control" id="paymentType">
                  </div>
                </div>
              </div>
              <div class="col-md-7">
                <div class="mb-3 row">
                  <label for="subTotal" class="col-sm-2 col-form-label">Sub Total</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="subTotal">
                  </div>
                </div>
                <div class="mb-3 row">
                  <label for="fixDiscount" class="col-sm-2 col-form-label">Fix Discount</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="fixDiscount">
                  </div>
                </div>
                <div class="mb-3 row">
                  <label for="grandTotal" class="col-sm-2 col-form-label">Grand Total</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="grandTotal">
                  </div>
                </div>
                <div class="mb-3 row">
                  <label for="payment" class="col-sm-2 col-form-label">Payment</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="payment">
                  </div>
                </div>
                <div class="mb-3">
                  <input type="submit" id="submitBtn" value="Create">
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- Purchase Form End -->