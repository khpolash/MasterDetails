<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Multi-step Form</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Multi-step Form</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<!-- =============== Multistep Form Start =============== -->
<div class="multistep-form">
    <div class="col-md-12">
        <div class="row">

            <!-- 1st Step Form Area Start -->
            <div class="form-area" id="stepOne">
                <!-- Rounded Step Button Start -->
                <ul class="step-btn">
                    <li class="active">
                        <span class="round-btn">1</span>
                    </li>
                    <li>
                        <span class="round-btn">2</span>
                    </li>
                    <li>
                        <span class="round-btn">3</span>
                    </li>
                </ul>
                <!-- Rounded Step Button End -->
                <!-- Heading Start -->
                <div class="heading">
                    <h3>Personal Details</h3>
                </div>
                <!-- Heading End -->
                <!-- Form Start -->
                <form action="">
                    <div class="mb-3">
                        <label for="firstName" class="form-label">First Name</label>
                        <input type="text" class="form-control" id="firstName" placeholder="First Name">
                    </div>
                    <div class="mb-3">
                        <label for="lastName" class="form-label">Last Name</label>
                        <input type="text" class="form-control" id="lastName" placeholder="Last Name">
                    </div>
                    <div class="mb-3">
                        <label for="birthDate" class="form-label">Date Of Birth</label>
                        <input type="text" class="form-control" id="birthDate" placeholder="D.O.B">
                    </div>
                    <div class="mb-3">
                        <label for="gender" class="form-label">Gender</label>
                        <select class="form-select" aria-label="Default select" id="gender">
                            <option selected>Male</option>
                            <option value="1">Female</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <div class="btn-row">
                            <input type="button" id="nextOne" class="next" value="Next">
                        </div>
                    </div>
                </form>
                <!-- Form End -->
            </div>
            <!-- 1st Step Form Area End -->
            <!-- 2nd Step Form Area Start -->
            <div class="form-area" id="stepTwo">
                <!-- Rounded Step Button Start -->
                <ul class="step-btn">
                    <li class="active">
                        <span class="round-btn">1</span>
                    </li>
                    <li class="active">
                        <span class="round-btn">2</span>
                    </li>
                    <li>
                        <span class="round-btn">3</span>
                    </li>
                </ul>
                <!-- Rounded Step Button End -->
                <!-- Heading Start -->
                <div class="heading">
                    <h3>Contact Details</h3>
                </div>
                <!-- Heading End -->
                <!-- Form Start -->
                <form action="">
                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" class="form-control" id="country" placeholder="Country">
                    </div>
                    <div class="mb-3">
                        <label for="state" class="form-label">State</label>
                        <input type="text" class="form-control" id="state" placeholder="State">
                    </div>
                    <div class="mb-3">
                        <label for="city" class="form-label">City</label>
                        <input type="text" class="form-control" id="city" placeholder="City">
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone</label>
                        <input type="text" class="form-control" id="phone" placeholder="Phone">
                    </div>
                    <div class="mb-3">
                        <div class="btn-row">
                            <input type="button" id="previousOne" class="previous" value="Previous">
                            <input type="button" id="nextTwo" class="next" value="Next">
                        </div>
                    </div>
                </form>
                <!-- Form End -->
            </div>
            <!-- 2nd Step Form Area End -->
            <!-- 3rd Step Form Area Start -->
            <div class="form-area" id="stepThree">
                <!-- Rounded Step Button Start -->
                <ul class="step-btn">
                    <li class="active">
                        <span class="round-btn">1</span>
                    </li>
                    <li class="active">
                        <span class="round-btn">2</span>
                    </li>
                    <li class="active">
                        <span class="round-btn">3</span>
                    </li>
                </ul>
                <!-- Rounded Step Button End -->
                <!-- Heading Start -->
                <div class="heading">
                    <h3>Login Details</h3>
                </div>
                <!-- Heading End -->
                <!-- Form Start -->
                <form action="">
                    <div class="mb-3">
                        <label for="userName" class="form-label">User Name</label>
                        <input type="text" class="form-control" id="userName" placeholder="User Name">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="text" class="form-control" id="email" placeholder="Email Address">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" placeholder="Password">
                    </div>
                    <div class="mb-3">
                        <label for="facebook" class="form-label">Facebook</label>
                        <input type="text" class="form-control" id="facebook" placeholder="Facebook">
                    </div>
                    <div class="mb-3">
                        <div class="btn-row">
                            <input type="button" id="previousTwo" class="previous" value="Previous">
                            <input type="submit" class="submit" value="Submit">
                        </div>
                    </div>
                </form>
                <!-- Form End -->
            </div>
            <!-- 3rd Step Form Area End -->
        </div>
    </div>
</div>
<!-- =============== Multistep Form End =============== -->
@section Scripts{
    <script src="~/adminlte/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script>
        $(function () {
            /* Multi Step Form Start */
            var step1 = document.getElementById("stepOne");
            var step2 = document.getElementById("stepTwo");
            var step3 = document.getElementById("stepThree");

            var next1 = document.getElementById("nextOne");
            var next2 = document.getElementById("nextTwo");
            var previous1 = document.getElementById("previousOne");
            var previous2 = document.getElementById("previousTwo");

            next1.onclick = function () {
                step2.style.display = "block";
                step1.style.display = "none";
            }
            next2.onclick = function () {
                step3.style.display = "block";
                step1.style.display = "none";
                step2.style.display = "none";
            }
            previous1.onclick = function () {
                step1.style.display = "block";
                step2.style.display = "none";
                step3.style.display = "none";
            }
            previous2.onclick = function () {
                step2.style.display = "block";
                step1.style.display = "none";
                step3.style.display = "none";
            }
            /* Multi Step Form End */

            bsCustomFileInput.init();
        });
    </script>
}