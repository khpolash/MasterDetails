<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Multiple Image Upload Form</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Multiple Image Upload Form</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<!-- Multiple Image Upload Form Start -->
<div class="multipleImg-upload-form">
    <form action="">
        <label for="multipleImage" class="form-label">Select Pictures</label>
        <input type="file" class="form-control">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="img">
                        <img src="~/adminlte/dist/img/th-1.jpg" alt="">
                    </div>

                    <div class="card-body">
                        <div class="thumnailBtn-area">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="thumbnail-image" id="thumbnail-image">
                                <label class="form-check-label" for="thumbnail-image">
                                    Set Thumbnail Image
                                </label>
                            </div>
                        </div>
                        <div class="deleteBtn">
                            <button type="button" class="btn btn-danger">
                                <i class="bi bi-x"></i>Remove Picture
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="img">
                        <img src="~/adminlte/dist/img/th-2.jpg" alt="">
                    </div>

                    <div class="card-body">
                        <div class="thumnailBtn-area">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="thumbnail-image" id="thumbnail-image">
                                <label class="form-check-label" for="thumbnail-image">
                                    Set Thumbnail Image
                                </label>
                            </div>
                        </div>

                        <div class="deleteBtn">
                            <button type="button" class="btn btn-danger">
                                <i class="bi bi-x"></i>Remove Picture
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="feturedProduct">
            <label class="form-check-label" for="feturedProduct">
                Fetured Product
            </label>
        </div>
        <hr>
        <div class="btn-area">
            <button type="submit" id="save">
                <i class="bi bi-plus"></i>Save
            </button>
            <button type="button" id="cancel">
                <i class="bi bi-chevron-double-left"></i>Cancel
            </button>
        </div>
    </form>
</div>
<!-- Multiple Image Upload Form End -->


@section Scripts{
    <script src="~/adminlte/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script>
        $(function () {
            bsCustomFileInput.init();
        });
    </script>
}